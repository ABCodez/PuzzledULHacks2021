<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/eggWhite"
    tools:context=".SplashIntro">

    <TextView
        android:id="@+id/splashText3"
        android:layout_width="484dp"
        android:layout_height="53dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/caprica"
        android:text="@string/splashText"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/splashText4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/splashText4"
        android:layout_width="316dp"
        android:layout_height="35dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="sans-serif-thin"
        android:text="@string/splashText2"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view2"
        android:layout_width="339dp"
        android:layout_height="339dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/splashText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/puzzlecorrect" />
</androidx.constraintlayout.widget.ConstraintLayout>